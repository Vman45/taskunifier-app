{
    "name": "taskunifier-app",
    "description": "TaskUnifier - Task Management Application",
    "author": "BL-IT",
    "version": "0.8.2",
    "private": true,
    "main": "public/electron.js",
    "homepage": "./",
    "scripts": {
        "react:start": "craco start",
        "electron:start": "electron .",
        "start": "REACT_APP_GIT_COMMIT_HASH=$(git rev-parse --short HEAD) craco start",
        "build": "REACT_APP_GIT_COMMIT_HASH=$(git rev-parse --short HEAD) craco build",
        "lint": "eslint src",
        "test": "craco test",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --x64 --mac --win --linux --c.extraMetadata.main=build/electron.js -p never"
    },
    "dependencies": {
        "@craco/craco": "^5.6.2",
        "@fortawesome/fontawesome-svg-core": "^1.2.25",
        "@fortawesome/free-solid-svg-icons": "^5.11.2",
        "@fortawesome/react-fontawesome": "^0.1.7",
        "antd": "^3.25.3",
        "aws-amplify": "^1.2.4",
        "axios": "^0.19.0",
        "bluebird": "^3.7.2",
        "craco-antd": "^1.14.1",
        "electron-is-dev": "^1.1.0",
        "https-proxy-agent": "^3.0.1",
        "inputmask-core": "^2.2.0",
        "jspdf": "^1.5.3",
        "jspdf-autotable": "^3.2.11",
        "lodash": "^4.17.15",
        "mkdirp": "^0.5.1",
        "moment": "^2.24.0",
        "mousetrap": "^1.6.3",
        "qs": "^6.9.1",
        "rc-color-picker": "^1.2.6",
        "react": "^16.12.0",
        "react-big-calendar": "^0.23.0",
        "react-dnd": "^9.5.1",
        "react-dnd-html5-backend": "^9.5.1",
        "react-dom": "^16.12.0",
        "react-draggable": "^4.1.0",
        "react-joyride": "^2.1.1",
        "react-redux": "^7.1.3",
        "react-rte": "^0.16.1",
        "react-scripts": "3.2.0",
        "react-split-pane": "^0.1.89",
        "react-stripe-elements": "^6.0.1",
        "react-virtualized": "^9.21.2",
        "reduce-reducers": "^1.0.4",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0",
        "reselect": "^4.0.0",
        "rimraf": "^3.0.0",
        "rrule": "^2.6.3",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "babel-jest": "^24.9.0",
        "electron": "^7.1.2",
        "electron-builder": "^21.2.0",
        "electron-devtools-installer": "^2.2.4",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "enzyme-to-json": "^3.4.3",
        "eslint": "^6.7.1",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "react-test-renderer": "^16.12.0",
        "typescript": "^3.7.2"
    },
    "build": {
        "appId": "com.bl-it.taskunifier",
        "compression": "normal",
        "productName": "TaskUnifier",
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "mac": {
            "icon": "assets/icon.icns",
            "type": "distribution",
            "target": [
                "dmg"
            ],
            "publish": {
                "provider": "github"
            },
            "category": "public.app-category.productivity"
        },
        "win": {
            "icon": "assets/icon.ico",
            "target": [
                "portable",
                "nsis"
            ],
            "sign": "./sign.js",
            "publish": {
                "provider": "github"
            }
        },
        "linux": {
            "icon": "assets/icon.png",
            "target": [
                "tar.gz",
                "snap",
                "AppImage"
            ],
            "publish": {
                "provider": "github"
            },
            "description": "TaskUnifier - Task Management Application",
            "category": "Office;ProjectManagement"
        }
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}