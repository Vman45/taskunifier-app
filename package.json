{
    "name": "taskunifier2",
    "description": "TaskUnifier 2 - Take GTD to the next level",
    "author": "BL-IT",
    "version": "0.1.0",
    "private": true,
    "main": "public/electron.js",
    "homepage": "./",
    "scripts": {
        "react:start": "BROWSER=none; craco start",
        "react:build": "craco build",
        "react:babel": "node node_modules/babel-cli/bin/babel.js src -d lib --copy-files",
        "react:lint": "node node_modules/eslint/bin/eslint.js src",
        "react:test": "craco test",
        "react:deploy": "node server.js",
        "electron:start": "electron .",
        "electron:build": "electron-builder",
        "start": "yarn react:start",
        "test": "yarn react:test",
        "pack": "electron-builder --dir",
        "dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
    },
    "dependencies": {
        "@craco/craco": "^4.1.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.17",
        "@fortawesome/free-solid-svg-icons": "^5.8.1",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "antd": "^3.16.3",
        "axios": "^0.18.0",
        "craco-antd": "^1.10.0",
        "electron-is-dev": "^1.1.0",
        "inputmask-core": "^2.2.0",
        "jspdf": "^1.5.3",
        "jspdf-autotable": "^3.1.1",
        "lodash": "^4.17.11",
        "mkdirp": "^0.5.1",
        "moment": "^2.24.0",
        "rc-color-picker": "^1.2.6",
        "react": "^16.8.6",
        "react-big-calendar": "^0.21.0",
        "react-contexify": "^4.1.0",
        "react-dnd": "^7.4.5",
        "react-dnd-html5-backend": "^7.4.4",
        "react-dom": "^16.8.6",
        "react-draggable": "^3.3.0",
        "react-redux": "^6.0.1",
        "react-scripts": "2.1.8",
        "react-split-pane": "^0.1.87",
        "react-virtualized": "^9.21.0",
        "reduce-reducers": "^1.0.1",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0",
        "reselect": "^4.0.0",
        "rimraf": "^2.6.3",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^10.0.1",
        "babel-plugin-import": "^1.11.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "electron": "^4.1.4",
        "electron-builder": "^20.39.0",
        "electron-devtools-installer": "^2.2.4",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.13.0",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^5.16.0",
        "eslint-plugin-react": "^7.12.4",
        "express": "^4.16.4",
        "react-test-renderer": "^16.8.6",
        "typescript": "^3.4.3"
    },
    "build": {
        "appId": "com.bl-it.taskunifier2",
        "compression": "normal",
        "productName": "TaskUnifier 2",
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "mac": {
            "icon": "assets/icon.icns",
            "type": "distribution",
            "target": [
                "pkg",
                "dmg"
            ],
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "linux": {
            "icon": "assets/icon.png",
            "target": [
                "snap",
                "AppImage"
            ],
            "description": "TaskUnifier 2 - Take GTD to the next level",
            "category": "Office;ProjectManagement"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}
