{
    "name": "taskunifier-app",
    "description": "TaskUnifier - Manage your tasks and improve your productivity",
    "author": "BL-IT",
    "version": "0.1.0-alpha",
    "private": true,
    "main": "public/electron.js",
    "homepage": "./",
    "scripts": {
        "react:start": "craco start",
        "electron:start": "electron .",
        "start": "craco start",
        "build": "craco build",
        "lint": "eslint src",
        "test": "craco test",
        "babel": "babel src -d lib --copy-files",
        "pack": "electron-builder --dir",
        "dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
    },
    "dependencies": {
        "@craco/craco": "^5.2.3",
        "@fortawesome/fontawesome-svg-core": "^1.2.19",
        "@fortawesome/free-solid-svg-icons": "^5.9.0",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "antd": "^3.19.8",
        "axios": "^0.19.0",
        "bluebird": "^3.5.5",
        "craco-antd": "^1.11.0",
        "electron-is-dev": "^1.1.0",
        "https-proxy-agent": "^2.2.1",
        "inputmask-core": "^2.2.0",
        "jspdf": "^1.5.3",
        "jspdf-autotable": "^3.1.1",
        "lodash": "^4.17.11",
        "mkdirp": "^0.5.1",
        "moment": "^2.24.0",
        "qs": "^6.7.0",
        "rc-color-picker": "^1.2.6",
        "react": "^16.8.6",
        "react-big-calendar": "^0.22.0",
        "react-contexify": "^4.1.1",
        "react-dnd": "^8.0.3",
        "react-dnd-html5-backend": "^8.0.3",
        "react-dom": "^16.8.6",
        "react-draggable": "^3.3.0",
        "react-joyride": "^2.0.5",
        "react-redux": "^7.1.0",
        "react-scripts": "3.0.1",
        "react-split-pane": "^0.1.87",
        "react-virtualized": "^9.21.1",
        "reduce-reducers": "^1.0.4",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0",
        "reselect": "^4.0.0",
        "rimraf": "^2.6.3",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^10.0.2",
        "babel-plugin-import": "^1.12.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "electron": "^5.0.6",
        "electron-builder": "^20.44.4",
        "electron-devtools-installer": "^2.2.4",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^6.0.1",
        "eslint-plugin-react": "^7.14.2",
        "react-test-renderer": "^16.8.6",
        "typescript": "^3.5.2"
    },
    "build": {
        "appId": "com.bl-it.taskunifier",
        "compression": "normal",
        "productName": "TaskUnifier",
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "mac": {
            "icon": "assets/icon.icns",
            "type": "distribution",
            "target": [
                "dmg"
            ],
            "publish": {
                "provider": "s3",
                "bucket": "taskunifier"
            },
            "category": "public.app-category.productivity"
        },
        "win": {
            "icon": "assets/icon.ico",
            "target": [
                "portable",
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "publish": {
                "provider": "s3",
                "bucket": "taskunifier"
            }
        },
        "linux": {
            "icon": "assets/icon.png",
            "target": [
                "tar.gz",
                "snap",
                "AppImage"
            ],
            "publish": {
                "provider": "s3",
                "bucket": "taskunifier"
            },
            "description": "TaskUnifier - Manage your tasks and improve your productivity",
            "category": "Office;ProjectManagement"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}