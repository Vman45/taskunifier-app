{
    "name": "taskunifier2",
    "description": "TaskUnifier 2 - Take GTD to the next level",
    "author": "BL-IT",
    "version": "0.1.0",
    "private": true,
    "main": "public/electron.js",
    "homepage": "./",
    "scripts": {
        "react:start": "BROWSER=none; craco start",
        "react:build": "craco build",
        "react:test": "craco test",
        "electron:start": "electron .",
        "electron:build": "electron-builder",
        "start": "yarn react:start",
        "pack": "electron-builder --dir",
        "dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
    },
    "dependencies": {
        "@craco/craco": "^4.1.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.17",
        "@fortawesome/free-solid-svg-icons": "^5.8.1",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "antd": "^3.16.3",
        "antd-table-infinity": "^1.1.2",
        "craco-antd": "^1.10.0",
        "electron-is-dev": "^1.1.0",
        "inputmask-core": "^2.2.0",
        "moment": "^2.24.0",
        "rc-color-picker": "^1.2.6",
        "react": "^16.8.6",
        "react-contexify": "^4.1.0",
        "react-dnd": "^7.4.5",
        "react-dnd-html5-backend": "^7.4.4",
        "react-dom": "^16.8.6",
        "react-redux": "^6.0.1",
        "react-resizable": "^1.7.5",
        "react-scripts": "2.1.8",
        "react-split-pane": "^0.1.87",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0",
        "rimraf": "^2.6.3",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "electron": "^4.1.4",
        "electron-builder": "^20.39.0",
        "electron-devtools-installer": "^2.2.4",
        "typescript": "^3.4.3"
    },
    "build": {
        "appId": "com.bl-it.taskunifier2",
        "compression": "normal",
        "productName": "TaskUnifier 2",
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "mac": {
            "icon": "assets/icon.icns",
            "type": "distribution",
            "target": [
                "pkg",
                "dmg"
            ],
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "linux": {
            "icon": "assets/icon.png",
            "target": [
                "snap",
                "AppImage"
            ],
            "description": "TaskUnifier 2 - Take GTD to the next level",
            "category": "Office;ProjectManagement"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
